<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="1">

    <EditText
        android:id="@+id/bulbContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signin"
        android:layout_centerHorizontal="true"
        android:layout_column="2"
        android:layout_row="2"
        android:layout_weight="1.00"
        android:gravity="top"
        android:inputType="textCapSentences|textMultiLine"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/isAppendLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:enabled="true"
            android:text="Location"
            />

        <EditText
            android:id="@+id/locationAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/signin"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_account_box_black"
            />

        <ImageButton
            android:layout_toRightOf="@id/signin"
            android:id="@+id/undo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_undo_black"/>

        <ImageButton
            android:layout_toRightOf="@id/undo"
            android:id="@+id/camera"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_photo_camera_black"/>

        <ImageButton
            android:layout_toRightOf="@id/camera"
            android:id="@+id/gallery"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_menu_gallery"/>

        <ImageButton
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/push"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/round_corner_accent"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:enabled="false"
            android:src="@drawable/ic_send_white"/>


    </RelativeLayout>


    <Switch
        android:id="@+id/isDebug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/signin"
        android:layout_alignBottom="@+id/signin"
        android:layout_alignEnd="@+id/bulbContent"
        android:layout_column="19"
        android:layout_gravity="center_horizontal"
        android:layout_row="29"
        android:layout_weight="1.00"
        android:text="Toggle Debug"/>

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="6dp"/>

</LinearLayout>