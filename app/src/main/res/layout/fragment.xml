<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:id="@+id/signin"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/bulbContent"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Push"
            android:id="@+id/push"
            android:enabled="false"/>

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bulbContent"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_below="@+id/signin"
        android:layout_centerHorizontal="true"
        android:layout_weight="1.00"
        android:gravity="top"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toggle Debug"
        android:id="@+id/isDebug"
        android:layout_row="29"
        android:layout_column="19"
        android:layout_alignBaseline="@+id/signin"
        android:layout_alignBottom="@+id/signin"
        android:layout_alignEnd="@+id/bulbContent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1.00"/>

</LinearLayout>